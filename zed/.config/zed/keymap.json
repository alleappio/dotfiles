// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "alt-.": "pane::ActivateNextItem",
      "alt-,": "pane::ActivatePreviousItem",
      "alt-c": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
      "alt-.": "pane::ActivateNextItem",
      "alt-,": "pane::ActivatePreviousItem",
      "alt-c": "pane::CloseActiveItem"
    }
  }
]
