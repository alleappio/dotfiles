configuration {
    modes: "drun,run,ssh,window";
    font: "AdwaitaMono Nerd Font 12";
    show-icons: true;
    icon-theme: "Adwaita";
    terminal: "kitty";

  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}
